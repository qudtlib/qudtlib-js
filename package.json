{
  "name": "@qudtlib/parent",
  "description": "JS Implementation of the QUDT ontology, allowing for instantiating QUDT units and quantitykinds and for unit conversion. ",
  "exports": "./dist/qudtlib.js",
  "engines": {
    "node": ">=14.16"
  },
  "workspaces": [
    "core",
    "allunits",
    "examples"
  ],
  "scripts": {
    "test": "jest --coverage --passWithNoTests",
    "run-examples": "node ./examples/dist/mjs/examples.js",
    "build": "gulp",
    "build-complete": "npm run check && npx lerna run build && npm run run-examples && npx lerna run test",
    "format-apply": "npx prettier --write .",
    "lint": "npx eslint .",
    "format-check": "npx prettier --check .",
    "check": "npm run format-check && npm run lint"
  },
  "keywords": [
    "QUDT",
    "Unit",
    "conversion",
    "Units",
    "Quantities"
  ],
  "author": "Florian Kleedorfer",
  "license": "CC-BY-4.0",
  "devDependencies": {
    "@types/jest": "^29.2.1",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "del": "^7.0.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "gulp": "^4.0.2",
    "gulp-typescript": "^6.0.0-alpha.1",
    "jest": "29.2.1",
    "lerna": "^6.0.1",
    "prettier": "2.7.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "decimal.js": "10.4.2"
  }
}
